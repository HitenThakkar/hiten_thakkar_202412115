datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/mongo"
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sku       String   @unique
  name      String
  price     Float
  category  String
  updatedAt DateTime @updatedAt
  @@index([category])
  @@index([updatedAt])
}